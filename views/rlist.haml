%h2{style: "color: #005c1f"} Find By Ratings
%p{class: 'hp'}

-if @car
  %table{class: 'rlist table', :border => '1'}
    %tbody
      %tr{class: 'rows'}
        %th{class: 'rows'} Year
        %th{class: 'rows'} Make
        %th{class: 'rows'} Model
        %th{class: 'rows'} Sentiment
      -@car.each do |c|
        %tr{class: 'rows'}
          %td{class: 'row'}
            = c['year']
          %td{class: 'rows'}
            = c['make']
          %td{class: 'rows'}
            = c['model']
          %td{class: 'rows'}
            = c['model_sentiment']
%form{:action => '/ratings', :method => 'post', :id => 'rlist-form', class: 'form-inline'}
  %input{:type => 'submit', :id => 'rlist-form-submit', :class => 'btn btn-default', :value => 'Choose new range'}
